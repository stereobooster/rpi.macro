{
  "name": "rpi.macro",
  "description": "Helper macro for react-precious-image",
  "version": "0.1.1",
  "main": "dist/rpi.macro.js",
  "license": "MIT",
  "files": ["dist/"],
  "keywords": [
    "lqip",
    "babel",
    "babel-macros",
    "babel-plugin-macros"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stereobooster/rpi.macro.git"
  },
  "scripts": {
    "test": "jest --coverage",
    "format": "prettier --write",
    "ci": "npm run test -- --ci && npm run build",
    "prepare": "npm run build",
    "build":
      "microbundle -i src/index.js -o dist && cp src/lqip.js dist/lqip.js  && cp src/meta.js dist/meta.js",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "babel-plugin-macros": "^2.2.1",
    "lqip": "^2.0.2"
  },
  "devDependencies": {
    "babel-core": "6.26.3",
    "babel-plugin-tester": "5.5.1",
    "babel-preset-env": "1.6.1",
    "jest": "22.3.0",
    "prettier": "1.10.2",
    "husky": "0.14.3",
    "lint-staged": "7.1.0",
    "microbundle": "0.4.3"
  },
  "jest": {
    "testRegex": "__tests__/.*.test.js$"
  },
  "lint-staged": {
    "*.{js,md}": ["prettier --write", "git add -A"]
  }
}
